    private void toplamaActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        
        if(count){
            s1 = islemYap();
        }
        else{
            s1 = Integer.parseInt(islemSonucu.getText());
        }
        
        islem = 1;
        islemSonucu.setText("");
        count= true;
        
    }                                       

    private void esittir1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
