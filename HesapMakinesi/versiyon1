    public double islemYap(){
        s2 = Double.parseDouble(islemSonucu.getText());
        switch(islem){
            case 1:
                sonuc = s1 + s2;
                break;
            case 2:
                sonuc = s1 - s2;
                break;
                
            case 3:
                sonuc = s1 * s2;
                break;
                
            case 4:
                try {
                    sonuc = s1 / s2;
                    break;
                } catch (Exception e) {
                    islemSonucu.setText("Infinity.");
                }
        }
        return sonuc;
    }

