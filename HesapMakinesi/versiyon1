    }                                        

    private void esittir2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        // Daha öncesinde 2 sayı ve bir işlem almış olması gerekiyor.
        
        double sonuc = islemYap();
        islemSonucu.setText(Double.toString(sonuc));
        
    }                                        

    private void cikarmaActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        
        if(count){
            s1 = islemYap();
        }
        else{
            s1 = Double.parseDouble(islemSonucu.getText());
        }
        islem = 2;
        islemSonucu.setText("");
        count = true;
    }                                       

    private void carpmaActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        
        if(count){
            s1 = islemYap();
        }
        else{
            s1 = Double.parseDouble(islemSonucu.getText());
        }
        islem = 3;
        islemSonucu.setText("");
        count= true;
        
    }                                      

    private void bolmeActionPerformed(java.awt.event.ActionEvent evt) {                                      
        
        if(count){
            s1 = islemYap();
        }
        else{
           s1 = Double.parseDouble(islemSonucu.getText());
        }
        islem = 4;
        
        // TODO add your handling code here:
        islemSonucu.setText("");
        
        count= true;
    }                                     

